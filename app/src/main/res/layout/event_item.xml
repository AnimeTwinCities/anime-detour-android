<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:colored_image="http://schemas.android.com/apk/res-auto"
        android:id="@+id/event_row_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="95dp"
        card_view:elevation="1dp"
        card_view:cardCornerRadius="0dp"
        android:layout_margin="4dp"
        android:foreground="?android:attr/selectableItemBackground"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <View
                android:id="@+id/event_row_color_label"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                tools:background="#ff0000"
        />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:background="@color/background"
        >
            <TextView
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:id="@+id/event_row_name"
                    android:layout_toLeftOf="@+id/event_row_badge_container"
                    android:layout_toStartOf="@+id/event_row_badge_container"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Panel Name"
                    android:maxLines="2"
                    android:ellipsize="end"
            />

            <LinearLayout
                    android:id="@+id/event_row_badge_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/event_row_name"
                    android:layout_alignTop="@id/event_row_name"
                    android:layout_marginLeft="16dp"
            >
                <TextView
                        android:id="@+id/event_row_age_warning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/danger"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        tools:text="18+"
                />
                <org.animetwincities.animedetour.framework.view.ColoredImageView
                        android:id="@+id/event_row_hoh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_hearing_black_24dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        colored_image:colorOverlay="@color/accent"
                />
                <org.animetwincities.animedetour.framework.view.ColoredImageView
                        android:id="@+id/event_row_starred"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ic_favorite_white_24dp"
                        colored_image:colorOverlay="@color/md_pink_400"
                />
            </LinearLayout>
            <TextView
                    android:id="@+id/event_row_description"
                    android:layout_below="@id/event_row_badge_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:text="Fri 1:00am - Sun 4:00pm in Room B"
            />
        </RelativeLayout>
    </LinearLayout>

    <View
            android:id="@+id/event_row_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone"
            android:background="@color/background_faded"
    />
</android.support.v7.widget.CardView>
